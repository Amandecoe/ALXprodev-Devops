#!/bin/bash
URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT="data.json"
ERROR_LOG="errors.txt"
curl -s -o "$OUTPUT" -w "%{http_code}" "$URL" > status.txt
STATUS=$(cat status.txt)
if ["$STATUS" -eq 200]; then
    echo "Data saved to $OUTPUT"
else 
    echo "Error: Failed to fetch data (HTTP $STATUS)" >> "ERROR_LOG"
    rm -f "$OUTPUT" 
fi
rm -f status.txt
